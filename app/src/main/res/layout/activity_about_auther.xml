<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="25dp"
    >
    <include layout="@layout/title"/>
    <ImageView
        android:background="@drawable/weicome"
        android:layout_width="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:layout_height="75dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="18dp"
        android:text="我的博客|我的Github"
        android:textIsSelectable="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:text="https://blog.csdn.net/qq873044564"
        android:textIsSelectable="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:text="https://www.jianshu.com/u/428c3b9e9705"
        android:textIsSelectable="true" />
    <TextView
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="https://github.com/jh360twb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        />
    <Button
        android:id="@+id/tosupport"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:text="赞助作者"
        android:background="@drawable/button_shape"
        android:layout_marginTop="35dp"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_height="wrap_content" />

</LinearLayout>